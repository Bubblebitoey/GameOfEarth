<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/co2bar" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/pplbar" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/city" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lender_1"
            android:layout_width="50dp"
            android:layout_height="100dp"

            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/lender_2" />

        <ImageView
            android:id="@+id/lender_2"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/lender_3" />

        <ImageView
            android:id="@+id/lender3"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/lender_1" />
    </LinearLayout>


</LinearLayout>